#!/usr/bin/env ruby

require 'json'
require 'pp'
require 'open3'

module Ow

  class Instance
    attr_reader :name, :layer

    def initialize(layer, name, hash)
      @layer = layer
      @name = name
      @hash = hash
      inspect
    end

    def inspect
      o, s = Open3.capture2("docker inspect #{container_name}", :stdin_data => "")
      begin
        @json = JSON.parse(o)
        @json = @json.first
      rescue => e
        puts e
      end
    end

    def [](idx)
      if @hash[idx].nil?
        nil
      else
        @hash[idx] || @hash[idx.to_s]
      end
    end

    # Destroy container
    def destroy
      cmd = "docker stop #{container_name}"
      o, s = Open3.capture2(cmd, :stdin_data => "")
      puts o
      cmd = "docker rm #{container_name}"
      o, s = Open3.capture2(cmd, :stdin_data => "")
      puts o
    end

    def container_ip
      @json["NetworkSettings"]["IPAddress"]
    end

    def run
      if @json["NetworkSettings"].nil?
        cmd = "docker run --name #{container_name} -d kureikain/opsworks:0.1 dumb-init /bin/bash -c \"while true; do sleep 5; done\""
        o, s = Open3.capture2(cmd, :stdin_data => "")
        inspect
      end
    end

    private
    def container_name
      "#{@name}-#{@hash['private_ip']}"
    end
  end

  class Runner

    class << self
      def dispatch(args)
        ow = Runner.new
        if args[0] == 'destroy' 
          ow.destroy
        else
          ow.run
        end
        ow
      end
    end

    attr_reader :ssh, :json_file, :opsworks_json
    attr_reader :rc

    def initialize
      @rc = 0
      @ssh = {
        user: ENV['OW_SSH_USER'],
        host: ENV['OW_SSH_HOST'],
        key:  ENV['OW_SSH_KEY'],
      }
      @json_file = ENV['OW_JSON'] || 'opsworks.json'
      parse
      setup
    end

    def parse
      begin
        @opsworks_json = JSON.parse(File.read(@json_file))

        @instances = @opsworks_json["opsworks"]["layers"]
          .select {|name, l| !l["instances"].nil? }
          .map do |name, layer|
          layer["instances"].map do |host, instance|
            Instance.new name, host, instance
          end
        end.flatten
      rescue  => e
        puts "Cannot parse json. #{e}"
        exit 1
      end
    end

    def setup
      @instances.each do |i|
        puts "> Create container for: #{i['private_ip']}"
        i.run
        puts "> Got IP: #{i.container_ip}"
      end
    end

    def run
      puts "run test"
    end

    def destroy
      @instances.each(&:destroy)
    end

    def get_json
      cmd = %W{ssh -i
              #{@ssh[:key]}
              #{@ssh[:user]}@#{@ssh[:host]}
      }.join(" ")

    end
  end
end

exit(Ow::Runner.dispatch(ARGV).rc)
